    <div class="item">
<h1>Login</h1>
    </div>
<form action="/login" method="POST">
    <div>
        <div class="item"><label for="name">Name:</label></div>
        <input type="text" id="name" name="name"
        required>
    </div>
    <div>
        <div class="item"><label for="password">Passwort:</label></div>
