<style>
    .outer_container{
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        padding: 5px;
        border: solid 2px;
        border-color:black;
        border-radius: 1rem;
        background-color:#ccc;
        color: black;
        justify-content: center;
        position:absolute;
        width: 400px;
        height: 200px;
        top: 40vh;
        left: 37.5vw;
    }

    .item{
        display:inline;
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 15px;
    }

    input[type=text] {
    display: block;
    padding:5px; 
    border:2px solid #ccc; 
    -webkit-border-radius: 5px;
    border-radius: 5px;
}

input[type=text]:focus {
    border-color:#333;
}

